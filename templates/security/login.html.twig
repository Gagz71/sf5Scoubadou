{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    {% if app.user %}
        <div class="mb-3">


            Vous etes connect√© sous {{ app.user.username }}  <a href="{{ path('logout') }}"><button class="btn btn-primary">Logout</button></a>
        </div>
    {% endif %}
    <div class="container">
        <h4 class="mb-3 font-weight-normal">Merci de vous connecter</h4>
        <form class="col-5">
            <div class="form-group col-4">
                <label for="exampleInputEmail1">Mail</label>
                <input type="email" name="email" value="{{ last_username }}" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">Nous ne la partagerons pas </small>
            </div>
            <div class="form-group col-4">
                <label for="exampleInputPassword1">Mot de passe </label>
                <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password" autocomplete="current-password">
            </div>
            <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="btn btn-primary text-center">connexion</button>
            | <button type="submit" class="btn btn-primary text-center">creer un compte</button>
        </form>
    </div>
{% endblock %}