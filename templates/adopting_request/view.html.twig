{% extends 'base.html.twig' %}

{% block title %}Demande d'adoption{% endblock %}

{% form_theme form "form/theme.html.twig" %}

{% block body %}
    <div class="container-fluid">

        <div class="jumbotron">
            <h1 class="display-4">Cr√©ation d'une nouvelle demande d'adoption</h1>

            <div class="d-flex flex-column mt-5 mb-5">
                <div class="form-group col-10 ">
                    {{ form_start(form) }}

                    {{ form_row(form.dogs) }}

                    {{ form_row(form.adopting) }}

                    {{ form_row(form.discussions) }}

                    {{ form_row(form.submit) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="row col-12 p-0 m-0 mb-5  d-flex justify-content-center" >
            <h3>Messages :</h3>
            {% for discussion in listDiscussions%}
                <div class="col ml-2 mr-2 mt-5  pb-0 rounded shadow"  style="">
                    {{ discussion.content }}
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}
