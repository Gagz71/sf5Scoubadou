{% extends 'base.html.twig' %}

{% block title %}   messages {% endblock %}

{% block body %}
    <h1 class="display-4">Vos messages</h1>
    <div class="container ">
        {% for discussion in adoptingRequest.discussions %}
            <div class="mt-5">
{#                <h2 class="mt-3 mb-1">{{ user.lastname }}</h2>#}
                {#            <h3> message {{ adoptingRequest.id }} </h3>#}
                {{ discussion.content[:400] ~ '...' }}
            </div>

        {% endfor %}

        <h1 class="display-4">repondre au message</h1>

        <div class="d-flex flex-column mt-5 mb-5">
            <div class="form-group col-10 ">

                {{ form_start(form) }}
                {{ form_row(form.content) }}
                {{ form_row(form.submit) }}

                {{ form_end(form) }}
            </div>
        </div>


    </div>


{% endblock %}